{
    "name": "Chromium-Waddle",
    "description": "a script that creates a Waddle client and connects to the Waddle server on the Waddle server endpoint",
    "version": "0.1.1",
    "manifest_version": 3,
    "content_security_policy": {
      "extension_pages": "script-src 'self' ; object-src 'self'"
    },
    "background": {
      "service_worker": "background.js"
    },
    "permissions": ["contextMenus", "clipboardWrite", "clipboardRead"],
    "action": {
      "default_popup": "index.html",
      "default_icon": {
        "16": "icons/ext16.png",
        "32": "icons/ext32.png",
        "48": "icons/ext48.png",
        "128": "icons/ext128.png"
      }
    },
    "icons": {
      "16": "icons/ext16.png",
      "32": "icons/ext32.png",
      "48": "icons/ext48.png",
      "128": "icons/ext128.png"
    }
  }